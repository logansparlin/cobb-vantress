.dist-box
	margin 1em 0.25%
	display inline-block
	border 1px solid #cccccc
	border-top 5px solid primary-red
	background-color white
	padding 2em 1em 1em 1em
	box-sizing border-box
	overflow hidden
	h5
		margin-bottom 10px
		font-size 1.2em
		font-weight normal

	p
		line-height 2em
	a
		line-height 2em
		color primary-red
		text-decoration none
		cursor pointer
	a:hover 
		border-bottom 1px dotted primary-red
img.logo 
	display block
	max-width 100px
	margin 1em auto 2em auto
	height auto

.info-window
	margin 0!important
	padding 0!important
	width 100%
	height 100%
	font-size 1em
	line-height 1.5em
	h5
		font-size 1em
		margin 0.2em 0
	a
		color primary-red
		text-decoration none
	a:hover 
		border-bottom 1px dotted primary-red

.triangle 
	height 45px
	text-align center
	line-height 1em
	margin-bottom 20px
	margin-top -10px

.csstransitions .triangle
	width 205px
	height 100px
	margin-top 0
	margin-bottom 0
	position absolute
	right -95px
	top -43px
	-webkit-transform rotate(45deg)
	-moz-transform rotate(45deg)
	-ms-transform rotate(45deg)
	-0-transform rotate(45deg)
	transform rotate(45deg)
	line-height 13.5em
	font-size 0.6em
	text-align center
div.dist-box.producer div.triangle
	background-color white
	border 2px solid primary-red
	color primary-red
div.dist-box.distributor div.triangle
	background-color primary-red
	color white
div.dist-box.cobb div.triangle
	background-color primary-grey
	color white

.triangle-two
	margin-left -15px
	margin-right -15px
	margin-bottom -15px
	height 40px
	text-align center
	color white
	line-height 2.3em
	font-size 1.2em
	margin-top 10px
	display none
div.dist-box.producer div.triangle-two 
	background-color white
	color primary-red
	border 2px solid primary-red
div.dist-box.distributor div.triangle-two 
	background-color primary-red
div.dist-box.cobb div.triangle-two 
	background-color primary-grey
