button 
	background white
	border 1px solid secondary-grey
	outline none
	border-radius 0px
	text-shadow none
	text-transform uppercase
	font-size 1.4em
	letter-spacing 0.05em
	padding 0.5em 4%
	margin 0.3em
	font-weight normal

button:hover, button.active
	background primary-red
	border 1px solid white
	text-shadow none
	color white

